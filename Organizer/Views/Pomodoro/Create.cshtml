@model Organizer.ViewModels.PomodoroTaskViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PomodoroTask</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataStart" class="control-label"></label>
                <input asp-for="DataStart" class="form-control" />
                <span asp-validation-for="DataStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDone" class="control-label"></label>
                <input asp-for="DateDone" class="form-control" />
                <span asp-validation-for="DateDone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PomodoroCategoryId" class="control-label"></label>
                <select asp-for="PomodoroCategoryId" class="form-control" asp-items="Model.PomodoroCategories"></select>
                                           
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Pomodoro</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
